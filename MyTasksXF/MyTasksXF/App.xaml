<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyTasksXF.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <Color x:Key="background">#F5F6FA</Color>
            <Color x:Key="primaryColor">#7063bf</Color>
            <Color x:Key="primaryDarkColor">#6156A6</Color>
            <Color x:Key="accentColor">#57BF50</Color>

            <Style TargetType="Button" x:Key="FloatActionButton">
                <Setter Property="VerticalOptions" Value="End"/>
                <Setter Property="HorizontalOptions" Value="End"/>
                <Setter Property="TextColor" Value="White"/>
                <Setter Property="CornerRadius" Value="100"/>
                <Setter Property="FontSize" Value="34"/>
                <Setter Property="HeightRequest" Value="65"/>
                <Setter Property="WidthRequest" Value="65"/>
                <Setter Property="BackgroundColor" Value="{StaticResource primaryColor}"/>
                <Setter Property="Text" Value="+"/>
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>